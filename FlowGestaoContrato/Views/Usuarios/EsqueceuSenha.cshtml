@model FlowGestaoContrato.ViewModels.EsqueceuSenhaViewModel
@{ ViewData["Title"] = "Esqueceu Senha"; }

@{
    Layout = null;
}

<div class="collection with-header">
    <div class="collection-header">
        <h5>Esqueceu senha</h5>
    </div>

    <form asp-action="EsqueceuSenha">
        
        <div class="collection-item">
            <div asp-validation-summary="ModelOnly" class="red-text text-darken-4"></div>
            <div class="row">
                <div class="col s12">
                    <div class="blue-text text-darken-3">Enviar senha para o e-mail</div>
                    <input asp-for="Email" class="validate" id="Email" />
                    <span asp-validation-for="Email" class="red-text text-darken-4"></span>
                </div>
            </div>
        </div>

        <div class="collection-item">
            <button type="submit" class="waves-effect waves-light btn-small green darken-4">Enviar</button>
        </div>

    </form>
</div>

